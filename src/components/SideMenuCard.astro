---
import type { Playlist } from '@/lib/data';

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;

const { id, cover, artists, title, color } = playlist;

const artistsSring = artists.join(', ');
---

<a
  href={`/playlist/${id}`}
  class='playlist-item flex relative p-2 overflow-hidden items-center gap-5 rounded-md hover:bg-[#1a1a1a]'
>
  <picture class='h-12 w-12 flex-none'>
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistsSring}`}
      class='object-cover w-full h-full rounded-md'
    />
  </picture>

  <div class='flex flex-auto flex-col truncate'>
    <h4 class='text-white text-base'>{title}</h4>
    <span class='text-sm text-[#a7a7a7]'>
      {artistsSring}
    </span>
  </div>
</a>
